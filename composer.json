{
    "name": "wordpress/wordpress",
    "description": "WordPress with Composer",
    "type": "project",
    "require": {
        "johnpbloch/wordpress": "^5.8"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://wpackagist.org"
        }
    ],
    "config": {
        "preferred-install": "dist",
        "optimize-autoloader": true
    },
    "scripts": {
        "post-install-cmd": [
            "wp core update-db"
        ]
    }
}
